FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml README.md ./
RUN pip install --no-cache-dir .

# Copy application
COPY src/ src/

# Create directories
RUN mkdir -p /app/uploads/images /app/uploads/audio /app/uploads/video

CMD ["arq", "src.tasks.worker.WorkerSettings"]
